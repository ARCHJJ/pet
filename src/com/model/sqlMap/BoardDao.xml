<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="BoardDao">
	<typeAlias alias="Integer" type="java.lang.Integer" />
	<typeAlias alias="String" type="java.lang.String" />
	<typeAlias alias="HashMap" type="java.util.HashMap" />
	<typeAlias alias="Date" type="java.util.Date" />
	<typeAlias alias="BoardBean" type="com.model.board.BoardBean" />
	
	<select id="getList" parameterClass="ArrayList" resultClass="BoardBean">
		SELECT board_type,index,email,title,date
			FROM board
			ORDER BY index DESC
	</select>
	
	<insert id="insertWrite" parameterClass="ArrayList" resultClass="BoardBean">
		INSERT INTO board(board_type,index,email,title,file,content,date) 
			VALUES(?,?,?,?,?,?,sysdate)
	</insert>
	
	<select id="getView" parameterClass="ArrayList" resultClass="BoardBean">
		SELECT board_type,index,email,title,date,file,content 
			FROM board WHERE index=?
	</select>
	
	<update id="modify" parameterClass="ArrayList" resultClass="BoardBean">
		UPDATE board 
			SET title=?, content=?
			WHERE board_type=? AND
			index=?
	</update>
	
	<delete id="delete" parameterClass="ArrayList" resultClass="BoardBean">
		DELETE FROM board
			WHERE board_type=? AND
			index=?
	</delete>
</sqlMap>