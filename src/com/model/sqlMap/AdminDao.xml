<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="AdminDao">
	<typeAlias alias="Integer" type="java.lang.Integer" />
	<typeAlias alias="String" type="java.lang.String" />
	<typeAlias alias="HashMap" type="java.util.HashMap" />
	<typeAlias alias="Date" type="java.util.Date" />
	<typeAlias alias="UserBean" type="com.model.mymenu.user.UserBean" />
	
	<select id="getMemberList" resultClass="UserBean">
		SELECT * FROM member 
			ORDER BY power desc
	</select>
	
	<update id="updateMember" parameterClass="HashMap">
		UPDATE member
			SET
				password = #password#,	address1 = #address1#, address2 = #address2#, phone = #phone#,	gender = #gender#,	power = #power#, name = #name#
		WHERE
			email = #email#
	</update>
	
	<delete id="deleteMember" parameterClass="String">
		DELETE FROM member 
			WHERE 
				email = #email#
	</delete>
</sqlMap>